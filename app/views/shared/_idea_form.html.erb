<%= form_for(@idea) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new idea" %>
    <%= f.text_area :proof, placeholder: "Link address here" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>