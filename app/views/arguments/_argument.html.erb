<li>
  <span class="topic"><%= argument.topic %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(argument.created_at) %> ago.
  </span>
  
  <% if current_user?(argument.user) %>
    <%= link_to "delete", argument, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: argument.topic %>
  
  <% end %>
</li>